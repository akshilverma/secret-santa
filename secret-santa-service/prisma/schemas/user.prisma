model User {
    id           String @id @default(uuid())
    firstName    String @db.VarChar(64)
    lastName     String @db.VarChar(64)
    userName     String @unique @db.VarChar(64)
    email        String @unique @db.VarChar(254)
    role         Role   @default(USER)
    accountLogin Login?

    @@unique([id, email])
}

enum Role {
    ADMIN
    USER
}
